/**index.wxss**/
page {
  height: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.status-bar {
  background: transparent;
  height: var(--status-bar-height);
}

.content-area {
  flex: 1;
  min-height: calc(100vh - 60rpx);
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: 8rpx;
  overflow-y: auto;
}

.content-list {
  padding: 8rpx 32rpx 40rpx;
  min-height: calc(100vh - 120rpx);
  box-sizing: border-box;
}

.content-card {
  background: white;
  border-radius: 32rpx;
  margin: 24rpx 0;
  padding: 40rpx;
  box-shadow: 0 4rpx 40rpx rgba(0,0,0,0.08);
  border: 2rpx solid #f5f5f5;
}

.content-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.content-type {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.content-time {
  color: #999;
  font-size: 24rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.content-text {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

.link-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 32rpx;
  padding: 40rpx;
  margin: 32rpx 0;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.link-icon {
  color: #667eea;
  font-size: 32rpx;
}

.link-url {
  color: #667eea;
  font-size: 28rpx;
  word-break: break-all;
  flex: 1;
}

.media-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin: 32rpx 0;
}

.media-item {
  aspect-ratio: 1;
  border-radius: 24rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.media-image {
  width: 100%;
  height: 100%;
}

.reaction-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.reactions {
  display: flex;
  gap: 32rpx;
}

.reaction-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  background: #f8f9fa;
  transition: all 0.2s;
}

.reaction-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.reaction-emoji {
  font-size: 32rpx;
}

.reaction-count {
  font-size: 24rpx;
  color: #666;
}

.share-btn {
  color: #667eea;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  background: rgba(102, 126, 234, 0.1);
  transition: all 0.2s;
}

.share-btn:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

.load-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 80rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  color: #999;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.empty-subtext {
  color: #ccc;
  font-size: 28rpx;
}
