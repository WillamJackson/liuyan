/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  line-height: 1.6;
  color: #333;
  --status-bar-height: 44px;
}

/* 真机适配 */
@media screen and (max-width: 414px) {
  page {
    --status-bar-height: 20px;
  }
}

/* iPhone X 系列适配 */
@supports (bottom: env(safe-area-inset-bottom)) {
  page {
    --status-bar-height: env(safe-area-inset-top);
  }
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
}

/* 优化滚动性能 */
scroll-view {
  -webkit-overflow-scrolling: touch;
  will-change: scroll-position;
}

/* 防止页面被拉伸 */
page, view {
  box-sizing: border-box;
}

/* 通用动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 40rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.2s;
}

.btn-primary:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
